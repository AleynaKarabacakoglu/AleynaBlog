
@model AleynaBlog.Models.Article
@using AleynaBlog.Models
@{
    ViewBag.Title = "AddArticle";
    //Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}


<div class="col-md-8 col-sm-12 col-xs-12">
    <div class="sec-title">
        <h2>Makale Ekleme Sayfası</h2>
    </div>
    <div class="body">
       
            @using (Html.BeginForm("AddArticle", "Blog", FormMethod.Post, new { enctype = "multipart/form-data" }))
            {
                @*<-----------------------Yazar Resmi------------------------>*@
                <label for="image">Resim Ekle</label>
                <div class="form-group">
                    <div class="form-line">
                        <input type="file" id="File" name="File" accept=".jpg,.JPG,.PNG,.png,.jpeg,.JPEG" class="form-control">
                    </div>
                </div>

                @*<-----------------------Başlık------------------------>*@
                <label for="name">Makale Başlığı</label>
                <div class="form-group">
                    <div class="form-line">

                        @Html.EditorFor(model => model.Title, new { htmlAttributes = new { @class = "form-conrol", @required = "reguired" } })

                    </div>
                </div>

                @*<----------------------- İçerik ---------------------------->*@
                <label for="email">İçerik</label>
                <div class="form-group">
                    <div class="form-line">
                        @Html.EditorFor(model => model.Contain, new { htmlAttributes = new { style = "height: 100px; width:600px",  @class = "form-conrol", @required = "reguired" } });;

                    </div>
                </div>

                <br>
                <div align="center">
                    <input type="submit" class="btn btn-success m-t-15 waves-effect" value="Ekle">
                </div>

            }

        </div>
  
    </div>
