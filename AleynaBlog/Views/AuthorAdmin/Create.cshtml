@model AleynaBlog.Models.Author
@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

    <div class="row clearfix">
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
            <div class="card">
                <div class="header">
                    <h2>
                        YAZAR EKLEME SAYFASI
                    </h2>
                    <ul class="header-dropdown m-r--5">
                        <li class="dropdown">
                            <a href="javascript:void(0);" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                                <i class="material-icons">more_vert</i>
                            </a>
                            
                        </li>
                    </ul>
                </div>
                <div class="body">
                    @using (Html.BeginForm("Create", "AuthorAdmin", FormMethod.Post, new { enctype = "multipart/form-data" }))
                    {
                        @*<-----------------------Yazar Resmi------------------------>*@
                        <label for="image">Yazar Resmi</label>
                        <div class="form-group">
                            <div class="form-line">
                                <input type="file" id="File" name="File" accept=".jpg,.JPG,.PNG,.png,.jpeg,.JPEG" class="form-control">
                            </div>
                        </div>

                        @*<-----------------------İsim Soyisim------------------------>*@
                        <label for="name">İsim - Soyisim</label>
                        <div class="form-group">
                            <div class="form-line">

                                @Html.EditorFor(model => model.NameSurname, new { htmlAttributes = new { @class = "form-conrol", @maxlenght = "50", @required = "reguired" } })

                            </div>
                        </div>

                        @*<----------------------- Mail ---------------------------->*@
                        <label for="email">Mail</label>
                        <div class="form-group">
                            <div class="form-line">
                                @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-conrol", @maxlenght = "50", @required = "reguired" } })

                            </div>
                        </div>

                        @*<----------------------- Yazar Hakkında ------------------------>*@
                        <label for="about">Yazar Hakkında</label>
                        <div class="form-group">
                            <div class="form-line">
                                @Html.EditorFor(model => model.About, new { htmlAttributes = new { @class = "form-conrol", @maxlenght = "150", @required = "reguired" } })

                            </div>
                        </div>
                        @*<----------------------- Şifre  ------------------------>*@
                        <label for="password">Şifre</label>
                        <div class="form-group">
                            <div class="form-line">
                                @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-conrol", @maxlenght = "50", @required = "reguired" } })

                                @*<input type="password" id="password" class="form-control" placeholder="Enter your password">*@
                            </div>
                        </div>

                        @*-------------Admin mi degil mi checkbox-------------------*@
                        <div class="form-group">
                            @Html.RadioButton("Role", "Admin", new { @checked = true, @id = "admin" })
                            @*<input type="radio" name="gender" id="male" class="with-gap">*@
                            <label for="admin">Admin</label>
                            @Html.RadioButton("Role", "Admin", new { @id = "user" })
                            <input type="radio" name="gender" id="female" class="with-gap">
                            <label for="user" class="m-l-20">Kullanıcı</label>
                        </div>
                        @*<----------------------------------->*@
                        <br>
                        <div align="center">
                            <input type="submit" class="btn btn-success m-t-15 waves-effect" value="Yazar Kaydet">
                        </div>

                    }
                </div>
            </div>
        </div>
    </div>
