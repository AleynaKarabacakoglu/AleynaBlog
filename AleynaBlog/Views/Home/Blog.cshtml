@using AleynaBlog.Models
<section class="news-section padd-1 bg-1">
    <div class="container">
        <!--Sec Title-->
        <div class="sec-title center">
            <h2>En Son <span>Eklenenler</span></h2>
        </div>
        <div class="row">
            @foreach (Article article in ViewBag.makalelerim)
            {
                <div class="col-md-4 col-sm-6">
                    <!--News Style One-->
                    <div class="news-style-one">
                        <div class="inner-box">
                            <div class="image">
                                <img src=@article.Image />
                                <div class="post-time">@article.AddedDate</div>
                            </div>
                            <div class="lower-content">
                                <h3><a href="blog-details.html">@article.Title</a></h3>
                                <div class="text">
                                    Consectetur adipiscing elit. Curabitur libero enim, lacinia finibus ante et, imperdiet finibus risus.
                                </div>
                                <div class="link-btn2 center">
                                    <a href="blog-details.html" class="btn-style-two">Hepsini Oku</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }


        </div>
    </div>
</section>
